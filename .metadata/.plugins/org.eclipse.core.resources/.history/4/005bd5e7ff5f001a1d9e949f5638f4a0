package curso_programacao;

import java.util.Locale;
import java.util.Scanner;

public class exer04 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
       Scanner teclado=new Scanner(System.in);
       Locale.setDefault(Locale.US);
       double horasTrab, valorHora, salario;
       System.out.println("Digite o número do Funcionário ");
       int numero = teclado.nextInt();
       System.out.println("Digite Total de Horas trabalhadas");
       double hTrab = teclado.nextInt();
       System.out.println("Digite o Valor Hora");
       double valorHora=teclado.nextDouble();   
       System.out.println(valorHora,hTrab);
       //double salario=valorHora*hTrab;
      
       
       System.out.printf("Número: %.2d%n Salário:  %.2f%n ",numero,salario);
       teclado.close();
	}

}
