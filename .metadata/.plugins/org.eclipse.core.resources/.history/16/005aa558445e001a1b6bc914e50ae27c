package curso_programacao;

import java.util.Locale;
import java.util.Scanner;

public class testes {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		Locale.setDefault(Locale.US);
		 System.out.println("Digite o 1 valor de soma: ");
		 double  valorSoma = teclado.nextDouble();
		 System.out.println("Digite o 2 valor de soma ");
		 double valorSoma2 = teclado.nextDouble();
		 System.out.printf("A Soma dos valores %f e %f: %f", valorSoma,valorSoma2);
		  
		
		
		double t= valorSoma+valorSoma2;
		 System.out.println(t);
		
		
		
		teclado.close();
	}
}